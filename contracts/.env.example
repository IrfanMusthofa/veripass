# ============================================
# VeriPass Contracts - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values.
# NEVER commit the .env file to version control.
# ============================================

# RPC ENDPOINTS
# -------------
# Get from: Infura, Alchemy, or other RPC providers

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Mainnet RPC URL (for production deployment)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# WALLET CONFIGURATION
# --------------------
# Private key of the deployer wallet
# SECURITY: Use a dedicated deployment wallet, not your personal wallet
# Format: 64 hex characters without 0x prefix

DEPLOYER_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# VERIFICATION
# ------------
# Etherscan API key for contract verification
# Get from: https://etherscan.io/myapikey

ETHERSCAN_API_KEY=your_etherscan_api_key_here

# GAS REPORTING
# -------------
# Set to "true" to enable gas usage reports during tests

REPORT_GAS=false

# COINMARKETCAP API (optional)
# ----------------------------
# For gas cost estimation in USD
# Get from: https://coinmarketcap.com/api/

# COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
